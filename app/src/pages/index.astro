---
import CustomInput from "../components/customInput.astro";
---

<style>
  body {
    background-color: black;
    color: white;
  }

  .container {
    margin: 300px 120px;
    width: 50%;
  }

  form {
    display: flex;
    flex-direction: column;
  }
</style>

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="generator" content="Astro" />
    <title>Astro</title>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  </head>
  <body>
    <div class="container">
      <h1>
        Please fill out your details, and weâ€™ll get a <br />meeting on the
        calendar.
      </h1>
      <form>
        <CustomInput
          label="First name"
          id="firstName"
          name="firstName"
          type="text"
          required={true}
        />
        <CustomInput
          label="Last name"
          id="lastName"
          name="lastName"
          type="text"
          required={true}
        />
        <CustomInput
          label="Company name"
          id="companyName"
          name="companyName"
          type="text"
          required={true}
        />
        <CustomInput
          label="Job title"
          id="jobTitle"
          name="jobTitle"
          type="text"
          required={true}
        />
        <CustomInput
          label="Business email"
          id="businessEmail"
          name="businessEmail"
          type="text"
          required={true}
        />
        <CustomInput
          label="Let us know how we can help"
          id="comments"
          name="comments"
          type="textarea"
          required={true}
        />
      </form>
    </div>
  </body>
</html>
