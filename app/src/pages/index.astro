---
import CustomInput from "../components/customInput.astro";
---

<style>
	body {
		background-color: black;
		color: white;
	}

	.container {
		margin: 300px 120px;
		width: 50%;
	}

	form {
		display: flex;
		flex-direction: column;
	}

	h1 {
		font-family: "Helvetica Neue", Helvetica, Arial, sans-serif;
		font-weight: 400;
		font-size: 1.5rem;
	}

	button {
		padding: 16px 32px;
		background-color: transparent;
		border: 2px solid #843cd4;
		color: white;
		font-family: monospace;
		border-radius: 3rem;
		cursor: pointer;
		transition: all 0.2s ease-in-out;
		position: relative;
		overflow: hidden;
		z-index: 0;
		align-self: start;
	}
	button::after {
		content: "";
		background-color: #843cd4;
		border-radius: 3rem;
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		transform: translateY(100%);
		transition: all 0.2s ease-out;
		z-index: -1;
	}

	button:hover {
		color: white;
		border: 2px solid transparent;
		transform: scale(1.05);
	}

	button:hover::after {
		transform: translateY(0);
	}
</style>

<meta charset="utf-8" />
<meta name="viewport" content="width=device-width, initial-scale=1" />
<meta name="generator" content="Astro" />
<title>Astro</title>
<link rel="icon" type="image/svg+xml" href="/favicon.svg" />

<body>
	<div class="container">
		<h1>
			Please fill out your details, and weâ€™ll get a meeting on the
			calendar.
		</h1>
		<form>
			<CustomInput
				label="First name"
				id="firstName"
				name="firstName"
				type="text"
				required={true}
			/>
			<CustomInput
				label="Last name"
				id="lastName"
				name="lastName"
				type="text"
				required={true}
			/>
			<CustomInput
				label="Company name"
				id="companyName"
				name="companyName"
				type="text"
				required={true}
			/>
			<CustomInput
				label="Job title"
				id="jobTitle"
				name="jobTitle"
				type="text"
				required={true}
			/>
			<CustomInput
				label="Business email"
				id="businessEmail"
				name="businessEmail"
				type="text"
				required={true}
			/>
			<CustomInput
				label="How did you hear about us?"
				id="referral"
				name="referral"
				type="dropdown"
				options={[
					{ value: "", label: "" },
					{ value: "wpp_groupm", label: "WPP / GroupM Agency" },
					{
						value: "google_internet",
						label: "Google / Internet Search",
					},
					{ value: "twitter", label: "Twitter" },
					{ value: "linkedin", label: "LinkedIn" },
					{ value: "other_soc_med", label: "Other Social Media" },
					{ value: "print", label: "Print Media" },
					{ value: "word_of_mouth", label: "Word of Mouth" },
					{ value: "other", label: "Other" },
				]}
				required={true}
			/>
			<CustomInput
				label="Let us know how we can help"
				id="comments"
				name="comments"
				type="textarea"
				required={true}
			/>
			<button>Submit &gt;</button>
		</form>
	</div>
</body>
